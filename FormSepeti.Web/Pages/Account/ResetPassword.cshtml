@page
@model FormSepeti.Web.Pages.Account.ResetPasswordModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Şifre Sıfırla";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">
                    <i class="fas fa-lock-open me-2"></i>Yeni Şifre Oluştur
                </h3>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-times-circle me-2"></i>@Model.ErrorMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success text-center">
                        <i class="fas fa-check-circle display-4 d-block mb-3 text-success"></i>
                        <p class="lead mb-3">@Model.SuccessMessage</p>
                        <a asp-page="/Account/Login" class="btn btn-success">
                            <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                        </a>
                    </div>
                }
                else if (Model.IsValidToken)
                {
                    <form method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Token" />

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
                            <input asp-for="NewPassword" type="password" class="form-control" autofocus />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                En az 6 karakter, 1 büyük harf, 1 küçük harf ve 1 rakam içermelidir.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Şifremi Güncelle
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-page="/Account/Login" class="text-muted">
                                <i class="fas fa-arrow-left me-1"></i>Giriş sayfasına dön
                            </a>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-warning text-center">
                        <i class="fas fa-exclamation-triangle display-4 d-block mb-3 text-warning"></i>
                        <p class="lead">Geçersiz veya süresi dolmuş bağlantı</p>
                        <p class="text-muted">Bu şifre sıfırlama bağlantısı geçersiz veya süresi dolmuş olabilir.</p>
                        <a asp-page="/Account/ForgotPassword" class="btn btn-warning">
                            <i class="fas fa-redo me-2"></i>Yeni Bağlantı İste
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}