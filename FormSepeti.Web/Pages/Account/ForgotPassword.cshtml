@page
@model FormSepeti.Web.Pages.Account.ForgotPasswordModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">
                    <i class="fas fa-key me-2"></i>Şifremi Unuttum
                </h3>

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-times-circle me-2"></i>@Model.ErrorMessage
                    </div>
                }

                @if (!Model.IsRequestSent)
                {
                    <p class="text-muted text-center mb-4">
                        Kayıtlı e-posta adresinizi girin. Şifrenizi sıfırlamak için bir bağlantı göndereceğiz.
                    </p>

                    <form method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">E-posta Adresi</label>
                            <input asp-for="Email" class="form-control" placeholder="ornek@email.com" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i>Sıfırlama Bağlantısı Gönder
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-page="/Account/Login" class="text-muted">
                                <i class="fas fa-arrow-left me-1"></i>Giriş sayfasına dön
                            </a>
                        </div>
                    </form>
                }
                else
                {
                    <div class="text-center">
                        <i class="fas fa-envelope-open-text display-1 text-success mb-3"></i>
                        <p class="lead">E-postanızı kontrol edin!</p>
                        <p class="text-muted mb-4">
                            Şifre sıfırlama bağlantısı <strong>@Model.Email</strong> adresine gönderildi.
                        </p>
                        <small class="text-muted d-block mb-3">
                            <i class="fas fa-info-circle me-1"></i>
                            Bağlantı 1 saat geçerlidir.
                        </small>
                        <a asp-page="/Account/Login" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Giriş Sayfasına Dön
                        </a>
                    </div>
                }
            </div>
        </div>

        @* ✅ Google Login Kullanıcıları İçin Uyarı *@
        <div class="card mt-3 border-info">
            <div class="card-body bg-light">
                <h6 class="text-info mb-2">
                    <i class="fab fa-google me-2"></i>Google ile mi giriş yapıyorsunuz?
                </h6>
                <p class="text-muted small mb-0">
                    Google hesabınızla giriş yapıyorsanız şifre sıfırlamaya ihtiyacınız yoktur. 
                    Doğrudan <a asp-page="/Account/Login">Google ile Giriş Yap</a> butonunu kullanın.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
