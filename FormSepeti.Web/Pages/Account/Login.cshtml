@page
@model FormSepeti.Web.Pages.Account.LoginModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Giriş";
}
<div class="row">
    <div class="col-md-5 mx-auto">
        <h3 class="mb-3">Giriş Yap</h3>

        <form method="post" novalidate>
            @* show ModelState and explicit Error property *@
            <div asp-validation-summary="All" class="text-danger mb-2"></div>
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="alert alert-danger">@Model.Error</div>
            }

            <div class="mb-3">
                <label asp-for="EmailOrPhone" class="form-label">Email veya Telefon</label>
                <input asp-for="EmailOrPhone" class="form-control" />
                <span asp-validation-for="EmailOrPhone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </div>

            <div class="mt-3 text-center">
                <a asp-page="/Account/Register">Kayıt Ol</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
