@page
@model FormSepeti.Web.Pages.Account.RegisterModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kayıt Ol";
}
<div class="row justify-content-center">
    <div class="col-md-5 col-lg-4">
        <div class="card">
            <div class="card-body p-4">
                <h4 class="text-center mb-4">Kayıt Ol</h4>
                
                @* GOOGLE İLE KAYIT BUTONU *@
                <div class="mb-4">
                    <a href="/Account/GoogleLogin" class="btn btn-danger w-100">
                        <i class="fab fa-google me-2"></i>Google ile Kayıt Ol
                    </a>
                    <div class="mt-2 p-2 rounded" style="background: rgba(99, 102, 241, 0.05);">
                        <small style="color: var(--text-secondary) !important; font-size: 0.75rem; display: block;">
                            <i class="fas fa-check-circle text-success me-1"></i>Tek tıkla hesap oluştur<br>
                            <i class="fas fa-check-circle text-success me-1"></i>Email doğrulama gerektirmez<br>
                            <i class="fas fa-check-circle text-success me-1"></i>Google Sheets otomatik bağlanır
                        </small>
                    </div>
                </div>
                
                <div class="position-relative my-3">
                    <hr class="my-0">
                    <span class="position-absolute top-50 start-50 translate-middle px-2" 
                          style="background: var(--card-bg, #fff); color: var(--text-muted) !important; font-size: 0.875rem;">
                        veya
                    </span>
                </div>
                
                @* Normal kayıt formu *@
                <form method="post" novalidate>
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label asp-for="EmailOrPhone" class="form-label">
                            <i class="fas fa-envelope me-1"></i>Email veya Telefon
                        </label>
                        <input asp-for="EmailOrPhone" class="form-control form-control-sm" placeholder="ornek@email.com" />
                        <span asp-validation-for="EmailOrPhone" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-lock me-1"></i>Şifre
                        </label>
                        <input asp-for="Password" type="password" class="form-control form-control-sm" placeholder="En az 6 karakter" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                        <small style="color: var(--text-muted) !important; display: block; margin-top: 0.25rem; font-size: 0.7rem;">
                            1 büyük harf, 1 küçük harf ve 1 rakam içermelidir
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="fas fa-lock me-1"></i>Şifre Tekrar
                        </label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-sm" placeholder="Şifrenizi tekrar girin" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3 p-2 rounded" style="background: rgba(99, 102, 241, 0.03);">
                        <input asp-for="AcceptTerms" class="form-check-input" style="margin-top: 0.15rem;" />
                        <label asp-for="AcceptTerms" class="form-check-label small" style="color: var(--text-primary) !important;">
                            <a href="#" style="color: var(--primary) !important; text-decoration: none;">Kullanım şartlarını</a> 
                            kabul ediyorum
                        </label>
                        <span asp-validation-for="AcceptTerms" class="text-danger d-block mt-1 small"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-user-plus me-2"></i>Kayıt Ol
                        </button>
                    </div>

                    <div class="text-center">
                        <small style="color: var(--text-secondary) !important;">Hesabınız var mı?</small>
                        <a asp-page="/Account/Login" style="color: var(--primary) !important; text-decoration: none; font-weight: 600; font-size: 0.875rem;">
                            Giriş Yap
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
