@page
@model FormSepeti.Web.Pages.IndexModel
@{
    Layout = "/Pages/_Layout.cshtml";
    ViewData["Title"] = "Anasayfa";
}
<div class="row">
    <div class="col-12">
        <h1>FormSepeti</h1>

        @if (Model.IsAuthenticated)
        {
            <p>Hoşgeldiniz, <strong>@Model.UserName</strong>!</p>

            <div class="mb-3">
                <a class="btn btn-primary" asp-page="/Sheets/Manage">Google Sheets Yönetimi</a>
                <a class="btn btn-secondary" asp-page="/Account/Register">Hesap Ayarları</a>
            </div>

            <form method="post" class="d-inline">
                <button type="submit" asp-page-handler="Logout" class="btn btn-outline-danger">Çıkış Yap</button>
            </form>
        }
        else
        {
            <p>Devam etmek için giriş yapın veya kayıt olun.</p>
            <a class="btn btn-primary" asp-page="/Account/Login">Giriş Yap</a>
            <a class="btn btn-link" asp-page="/Account/Register">Kayıt Ol</a>
        }
    </div>
</div>
