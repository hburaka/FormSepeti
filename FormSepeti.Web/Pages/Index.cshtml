@page
@model FormSepeti.Web.Pages.IndexModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Anasayfa";
}
<div class="row">
    <div class="col-lg-8 mx-auto text-center py-5">
        <h1 class="display-5 mb-3">Formlarınızı Google Sheets'e Otomatik Kaydedin</h1>
        <p class="lead mb-4">
            JotForm formlarınızı toplayın, verilerinizi otomatik olarak Google Sheets'e yazdırın.
            Meslek gruplarına özel paketler ve kolay entegrasyon.
        </p>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a class="btn btn-primary btn-lg" asp-page="/Account/Register">Kayıt Ol</a>
            <a class="btn btn-outline-secondary btn-lg" asp-page="/Account/Login">Giriş Yap</a>
        </div>
    </div>
</div>
