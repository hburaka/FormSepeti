@page
@model FormSepeti.Web.Pages.IndexModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Anasayfa";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center py-5">
                <h1 class="display-4 fw-bold mb-3">Formlarınızı Google Sheets'e Otomatik Kaydedin</h1>
                <p class="lead mb-4 text-muted">
                   Formlarınızı toplayın, verilerinizi otomatik olarak Google Sheets'e yazdırın.
                    Meslek gruplarına özel paketler ve kolay entegrasyon.
                </p>

                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center mb-5">
                    <a class="btn btn-primary btn-lg px-4" asp-page="/Account/Register">
                        <i class="bi bi-person-plus me-2"></i>Ücretsiz Başla
                    </a>
                    <a class="btn btn-outline-secondary btn-lg px-4" asp-page="/Account/Login">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container py-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="fw-bold mb-3">Neden FormSepeti?</h2>
            <p class="text-muted">İşinizi kolaylaştıran özellikler</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <div class="feature-icon mb-3">
                    <i class="bi bi-lightning-charge-fill text-primary"></i>
                </div>
                <h5 class="fw-bold mb-2">Otomatik Aktarım</h5>
                <p class="text-muted small">Form verileriniz otomatik olarak Google Sheets'e aktarılır. Manuel işlem yok!</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <div class="feature-icon mb-3">
                    <i class="bi bi-shield-check text-primary"></i>
                </div>
                <h5 class="fw-bold mb-2">Güvenli ve Hızlı</h5>
                <p class="text-muted small">Verileriniz güvenli bir şekilde şifrelenir ve anında aktarılır.</p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <div class="feature-icon mb-3">
                    <i class="bi bi-grid-3x3-gap-fill text-primary"></i>
                </div>
                <h5 class="fw-bold mb-2">Meslek Paketleri</h5>
                <p class="text-muted small">Emlak, sağlık, eğitim gibi sektörlere özel hazır form paketleri.</p>
            </div>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="how-it-works-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="fw-bold mb-3">Nasıl Çalışır?</h2>
                <p class="text-muted">3 basit adımda başlayın</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="step-card text-center">
                    <div class="step-number mb-3">1</div>
                    <h5 class="fw-bold mb-2">Paket Seçin</h5>
                    <p class="text-muted small">Size uygun paketi seçin ve kayıt olun</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="step-card text-center">
                    <div class="step-number mb-3">2</div>
                    <h5 class="fw-bold mb-2">Form Ekleyin</h5>
                    <p class="text-muted small">Kolaytik API anahtarınızı girin ve formlarınızı ekleyin</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="step-card text-center">
                    <div class="step-number mb-3">3</div>
                    <h5 class="fw-bold mb-2">Google Sheets'e Bağlayın</h5>
                    <p class="text-muted small">Google hesabınızı bağlayın, veriler otomatik aktarılsın</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="cta-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="fw-bold mb-3">Hemen Başlayın!</h2>
                <p class="lead mb-4">Ücretsiz deneme paketimizle FormSepeti'ni deneyin</p>
                <a class="btn btn-light btn-lg px-5" asp-page="/Package/Index">
                    <i class="bi bi-box-seam me-2"></i>Paketleri İncele
                </a>
            </div>
        </div>
    </div>
</div>
