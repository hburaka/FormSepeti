@page "{id:int}"
@model FormSepeti.Web.Pages.Package.DetailModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Package?.PackageName ?? "Paket Detayı";
}

<div class="row g-4 fade-in-up">
    <!-- Package Header -->
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-page="/Dashboard/Index">
                        <i class="fas fa-home me-1"></i>Dashboard
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-page="/Package/Index">Paketler</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    @Model.Package.PackageName
                </li>
            </ol>
        </nav>
    </div>

    <!-- Package Info Card -->
    <div class="col-lg-8">
        <div class="card border-0 mb-4">
            <div class="card-header bg-gradient-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-box-open me-2"></i>
                        @Model.Package.PackageName
                    </h4>
                    @* ✅ SADECE GERÇEKTEN SAHİPSE GÖSTER *@
                    @if (Model.UserHasThisPackage == true)
                    {
                        <span class="badge bg-success badge-lg">
                            <i class="fas fa-check-circle me-1"></i>Sahibisiniz
                        </span>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="info-box">
                            <i class="fas fa-tag text-primary fa-2x mb-2"></i>
                            <h6 class="text-muted">Fiyat</h6>
                            <h3 class="text-white">
                                @Model.Package.Price.ToString("0.##") TL
                                @if (Model.Package.DurationDays.HasValue)
                                {
                                    if (Model.Package.DurationDays.Value <= 31)
                                    {
                                        <small class="text-light-muted">/ Ay</small>
                                    }
                                    else if (Model.Package.DurationDays.Value >= 365)
                                    {
                                        <small class="text-light-muted">/ Yıl</small>
                                    }
                                    else
                                    {
                                        <small class="text-light-muted">/ @Model.Package.DurationDays Gün</small>
                                    }
                                }
                                else
                                {
                                    <small class="text-light-muted">/ Süresiz</small>
                                }
                            </h3>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <i class="fas fa-calendar-alt text-success fa-2x mb-2"></i>
                            <h6 class="text-muted">Süre</h6>
                            <h3 class="text-white">
                                @if (Model.Package.DurationDays.HasValue)
                                {
                                    <text>@Model.Package.DurationDays gün</text>
                                }
                                else
                                {
                                    <text>Sınırsız</text>   
                                }
                            </h3>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <h6 class="text-light-muted mb-2">
                        <i class="fas fa-info-circle me-2"></i>Açıklama
                    </h6>
                    <p class="text-light-secondary">
                        @(Model.Package.Description ?? "Açıklama bulunmuyor.")
                    </p>
                </div>

                @* ✅ AÇIK KARŞILAŞTIRMA *@
                @if (Model.UserHasThisPackage == false)
                {
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary btn-lg" asp-page="/Package/Purchase" asp-route-packageId="@Model.Package.PackageId">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Paketi Satın Al - @Model.Package.Price.ToString("0.##") TL
                        </a>
                    </div>
                }
                else if (Model.UserHasThisPackage == true)
                {
                    <div class="alert alert-success mb-0">
                        <i class="fas fa-check-circle me-2"></i>
                        Bu pakete zaten sahipsiniz! Formları kullanmaya başlayabilirsiniz.
                    </div>
                }
                else
                {
                    @* ✅ DEBUG: UserHasThisPackage ne durumda? *@
                    <div class="alert alert-warning mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Paket durumu belirlenemedi. Lütfen tekrar deneyin.
                    </div>
                }
            </div>
        </div>

        <!-- Forms in Package -->
        <div class="card border-0">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2 text-primary"></i>
                    Paketteki Formlar (@Model.TotalForms)
                </h5>
            </div>
            <div class="card-body">
                @if (Model.FormsInPackage.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var mapping in Model.FormsInPackage.OrderBy(m => m.SortOrder))
                        {
                            <div class="list-group-item form-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="d-flex align-items-start gap-3">
                                        <div class="form-icon">
                                            <i class="fas fa-file-alt text-primary"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1 text-white">
                                                @mapping.Form.FormName
                                                @if (mapping.IsFreeInGroup && !mapping.RequiresPackage)
                                                {
                                                    <span class="badge bg-success ms-2">
                                                        <i class="fas fa-gift me-1"></i>Ücretsiz
                                                    </span>
                                                }
                                            </h6>
                                            <p class="mb-0 text-light-secondary small">
                                                @(mapping.Form.FormDescription ?? "Form açıklaması yok.")
                                            </p>
                                        </div>
                                    </div>
                                    @* ✅ AÇIK KARŞILAŞTIRMA *@
                                    @if (Model.UserHasThisPackage == true || (mapping.IsFreeInGroup && !mapping.RequiresPackage))
                                    {
                                        <a class="btn btn-sm btn-outline-primary" 
                                           asp-page="/Form/View" 
                                           asp-route-id="@mapping.FormId" 
                                           asp-route-groupId="@Model.Package.GroupId">
                                            <i class="fas fa-external-link-alt me-1"></i>Aç
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-lock me-1"></i>Kilitli
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <p class="text-light-muted">Bu pakette henüz form bulunmuyor.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <aside class="col-lg-4">
        <!-- Package Stats -->
        <div class="card border-0 mb-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-chart-pie me-2 text-info"></i>
                    Paket İstatistikleri
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3 pb-3 border-bottom border-secondary">
                    <div>
                        <i class="fas fa-file-alt text-primary me-2"></i>
                        <span class="text-light-muted">Toplam Form</span>
                    </div>
                    <strong class="text-white">@Model.TotalForms</strong>
                </div>
                <div class="d-flex justify-content-between mb-3 pb-3 border-bottom border-secondary">
                    <div>
                        <i class="fas fa-gift text-success me-2"></i>
                        <span class="text-light-muted">Ücretsiz Form</span>
                    </div>
                    <strong class="text-white">@Model.FreeForms</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <div>
                        <i class="fas fa-layer-group text-warning me-2"></i>
                        <span class="text-light-muted">Grup</span>
                    </div>
                    <strong class="text-white">@Model.FormGroup.GroupName</strong>
                </div>
            </div>
        </div>

        @* ✅ DEBUG PANEL (GELİŞTİRME SIRASINDA) *@
        @if (true) // Geliştirme modunda göster
        {
            <div class="card border-warning mb-3">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">
                        <i class="fas fa-bug me-2"></i>Debug Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <small>
                        <strong>UserHasThisPackage:</strong> @Model.UserHasThisPackage<br/>
                        <strong>Package.GroupId:</strong> @Model.Package.GroupId<br/>
                        <strong>User Claims:</strong> @string.Join(", ", User.Claims.Select(c => $"{c.Type}={c.Value}"))
                    </small>
                </div>
            </div>
        }

        <!-- Features -->
        <div class="card border-0 mb-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-star me-2 text-warning"></i>
                    Özellikler
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        <span class="text-light">Tüm formlara erişim</span>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        <span class="text-light">Google Sheets entegrasyonu</span>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        <span class="text-light">Sınırsız gönderim</span>
                    </li>
                    <li class="mb-0">
                        <i class="fas fa-check text-success me-2"></i>
                        <span class="text-light">7/24 destek</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card border-0">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-bolt me-2 text-warning"></i>
                    Hızlı İşlemler
                </h6>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action" asp-page="/Package/Index">
                        <i class="fas fa-arrow-left text-primary me-2"></i>
                        Tüm Paketler
                    </a>
                    <a class="list-group-item list-group-item-action" asp-page="/Dashboard/Index">
                        <i class="fas fa-home text-success me-2"></i>
                        Dashboard
                    </a>
                </div>
            </div>
        </div>
    </aside>
</div>
