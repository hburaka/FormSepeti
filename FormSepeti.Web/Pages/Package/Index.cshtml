@page
@model FormSepeti.Web.Pages.Package.IndexModel
@{
    ViewData["Title"] = "Paketler";
}

<!-- Hero Section -->
<div class="packages-hero">
    <div class="container">
        <div class="row align-items-center py-5">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="hero-title mb-3">
                    <i class="bi bi-box-seam me-3"></i>
                    Size Özel Paketler
                </h1>
                <p class="hero-subtitle mb-4">
                    İhtiyacınıza uygun paketi seçin, formlarınızı kullanmaya başlayın
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container py-4">

    <!-- Search & Filter Section -->
    <div class="search-filter-section mb-4">
        <form method="get" id="filterForm">

            <!-- Search Bar - Prominent -->
            <div class="search-bar-wrapper mb-4">
                <div class="search-bar">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text"
                           name="searchQuery"
                           class="search-input"
                           placeholder="Paket veya form adı ile ara... (örn: Emlak, Randevu)"
                           value="@Model.SearchQuery">
                    <button type="submit" class="search-btn">
                        Ara
                    </button>
                    @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
                    {
                        <a href="/Package/Index" class="clear-search" title="Aramayı Temizle">
                            <i class="bi bi-x-circle"></i>
                        </a>
                    }
                </div>
            </div>

            <!-- Filters - Compact Pills -->
            <div class="filters-wrapper">
                <div class="filter-group">
                    <label class="filter-label">
                        <i class="bi bi-funnel"></i>
                        Filtre:
                    </label>
                    <select name="filter" class="filter-select" onchange="resetPageAndSubmit()">
                        <option value="all" selected="@(Model.Filter == "all")">Tümü</option>
                        <option value="owned" selected="@(Model.Filter == "owned")">Sahip Olduklarım</option>
                        <option value="available" selected="@(Model.Filter == "available")">Satın Alınabilir</option>
                        <option value="free" selected="@(Model.Filter == "free")">Ücretsiz</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label class="filter-label">
                        <i class="bi bi-sort-down"></i>
                        Sırala:
                    </label>
                    <select name="sortBy" class="filter-select" onchange="resetPageAndSubmit()">
                        <option value="name" selected="@(Model.SortBy == "name")">İsim</option>
                        <option value="price" selected="@(Model.SortBy == "price")">Fiyat</option>
                        <option value="owned" selected="@(Model.SortBy == "owned")">Sahiplik</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label class="filter-label">
                        <i class="bi bi-arrow-down-up"></i>
                        Yön:
                    </label>
                    <select name="sortOrder" class="filter-select" onchange="resetPageAndSubmit()">
                        <option value="asc" selected="@(Model.SortOrder == "asc")">A-Z</option>
                        <option value="desc" selected="@(Model.SortOrder == "desc")">Z-A</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label class="filter-label">
                        <i class="bi bi-grid-3x3"></i>
                        Göster:
                    </label>
                    <select name="pageSize" class="filter-select" onchange="resetPageAndSubmit()">
                        <option value="6" selected="@(Model.PageSize == 6)">6</option>
                        <option value="9" selected="@(Model.PageSize == 9)">9</option>
                        <option value="12" selected="@(Model.PageSize == 12)">12</option>
                        <option value="18" selected="@(Model.PageSize == 18)">18</option>
                    </select>
                </div>
            </div>

            <input type="hidden" name="pageNumber" id="pageNumberInput" value="@Model.PageNumber">
        </form>

        <!-- Results Info -->
        <div class="results-info">
            @if (Model.TotalItems > 0)
            {
                <span class="results-count">
                    <strong>@Model.StartItem</strong>-<strong>@Model.EndItem</strong> / <strong>@Model.TotalItems</strong> paket
                </span>
            }
            else
            {
                <span class="results-count">Sonuç bulunamadı</span>
            }

            @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
            {
                <span class="search-badge">
                    <i class="bi bi-search"></i> "@Model.SearchQuery"
                </span>
            }
        </div>
    </div>

    <!-- Packages Grid -->
    @if (Model.Packages == null || !Model.Packages.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-inbox"></i>
            </div>
            <h3 class="empty-title">
                @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
                {
                    <span>Arama sonucu bulunamadı</span>
                }
                else
                {
                    <span>Henüz paket bulunmuyor</span>
                }
            </h3>
            <p class="empty-text">
                @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
                {
                    <span>"<strong>@Model.SearchQuery</strong>" için eşleşme bulunamadı</span>
                }
                else
                {
                    <span>Filtreleri değiştirerek tekrar deneyin</span>
                }
            </p>
            <a href="/Package/Index" class="btn btn-primary">
                <i class="bi bi-arrow-left me-2"></i>Tüm Paketler
            </a>
        </div>
    }
    else
    {
        <div class="packages-grid">
            @foreach (var package in Model.Packages)
            {
                <div class="package-card @(package.IsOwned ? "owned" : "")">

                    <!-- Header -->
                    <div class="package-header">
                        <div class="package-title-row">
                            <h3 class="package-title">@package.PackageName</h3>
                            <div class="package-badges">
                                @if (package.IsOwned)
                                {
                                    <span class="badge badge-owned">
                                        <i class="bi bi-check-circle-fill"></i>
                                    </span>
                                }
                                @if (package.Price == 0)
                                {
                                    <span class="badge badge-free">Ücretsiz</span>
                                }
                            </div>
                        </div>
                        <p class="package-description">@package.Description</p>
                    </div>

                    <!-- Content -->
                    <div class="package-content">
                        @if (package.FormCount > 0)
                        {
                            <div class="forms-section">
                                <div class="forms-header">
                                    <i class="bi bi-file-earmark-text"></i>
                                    <span>@package.FormCount Form</span>
                                </div>
                                <div class="forms-list">
                                    @foreach (var formName in package.FormNames.Take(3))
                                    {
                                        <div class="form-item">
                                            <i class="bi bi-check2"></i>
                                            <span>@formName</span>
                                        </div>
                                    }
                                    @if (package.FormNames.Count > 3)
                                    {
                                        <div class="form-item more">
                                            <i class="bi bi-plus-circle"></i>
                                            <span>@(package.FormNames.Count - 3) form daha</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Footer -->
                    <div class="package-footer">
                        <div class="package-price">
                            @if (package.Price == 0)
                            {
                                <span class="price-value free">₺0</span>
                                <span class="price-period">Ücretsiz</span>
                            }
                            else
                            {
                                <span class="price-value">₺@package.Price.ToString("N0")</span>
                                <span class="price-period">/ tek seferlik</span>
                            }
                        </div>

                        @if (package.IsOwned)
                        {
                            <a href="/Package/Detail/@package.PackageId" class="btn-card btn-owned">
                                <i class="bi bi-eye"></i>
                                Detaylar
                            </a>
                        }
                        else
                        {
                            <a href="/Package/Detail/@package.PackageId" class="btn-card btn-primary">
                                İncele
                                <i class="bi bi-arrow-right"></i>
                            </a>
                        }
                    </div>

                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="pagination-wrapper">
                <nav class="pagination-nav">

                    <a href="@GetPageUrl(1)"
                       class="page-btn @(!Model.HasPreviousPage ? "disabled" : "")"
                       aria-label="İlk sayfa">
                        <i class="bi bi-chevron-bar-left"></i>
                    </a>

                    <a href="@GetPageUrl(Model.PageNumber - 1)"
                       class="page-btn @(!Model.HasPreviousPage ? "disabled" : "")"
                       aria-label="Önceki">
                        <i class="bi bi-chevron-left"></i>
                    </a>

                    <div class="page-numbers">
                        @foreach (var pageNum in Model.PageNumbers)
                        {
                            @if (pageNum == -1)
                            {
                                <span class="page-dots">...</span>
                            }
                            else
                            {
                                <a href="@GetPageUrl(pageNum)"
                                   class="page-number @(pageNum == Model.PageNumber ? "active" : "")">
                                    @pageNum
                                </a>
                            }
                        }
                    </div>

                    <a href="@GetPageUrl(Model.PageNumber + 1)"
                       class="page-btn @(!Model.HasNextPage ? "disabled" : "")"
                       aria-label="Sonraki">
                        <i class="bi bi-chevron-right"></i>
                    </a>

                    <a href="@GetPageUrl(Model.TotalPages)"
                       class="page-btn @(!Model.HasNextPage ? "disabled" : "")"
                       aria-label="Son sayfa">
                        <i class="bi bi-chevron-bar-right"></i>
                    </a>

                </nav>

                <div class="pagination-info">
                    Sayfa @Model.PageNumber / @Model.TotalPages
                </div>
            </div>
        }
    }
</div>

@functions {
    string GetPageUrl(int pageNumber)
    {
        var queryParams = new Dictionary<string, string>
        {
            { "pageNumber", pageNumber.ToString() },
            { "pageSize", Model.PageSize.ToString() },
            { "sortBy", Model.SortBy },
            { "sortOrder", Model.SortOrder },
            { "filter", Model.Filter }
        };

        if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
        {
            queryParams.Add("searchQuery", Model.SearchQuery);
        }

        var queryString = string.Join("&", queryParams.Select(kvp => $"{kvp.Key}={Uri.EscapeDataString(kvp.Value)}"));
        return $"/Package/Index?{queryString}";
    }
}

<script>
    function resetPageAndSubmit() {
        document.getElementById('pageNumberInput').value = '1';
        document.getElementById('filterForm').submit();
    }
