@page
@model FormSepeti.Web.Pages.Package.IndexModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Paketler";
}
<div class="row">
    <div class="col-12">
        <h3>💼 Paket Seçenekleri</h3>
        <div class="row mt-3">
            @if (Model.Packages?.Count > 0)
            {
                @foreach (var p in Model.Packages)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5>@p.Name</h5>
                                <p class="text-muted">@p.Price.ToString("0.##") TL / Ay — @p.Description</p>
                                <a class="btn btn-primary" asp-page="/Package/Purchase" asp-route-packageId="@p.PackageId">Satın Al</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info">Henüz paket yok.</div>
                </div>
            }
        </div>
    </div>
</div>
