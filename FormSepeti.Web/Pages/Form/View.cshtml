@page
@model FormSepeti.Web.Pages.Form.ViewModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Form Detay";
}
<div class="row">
    <div class="col-12 mb-3">
        <h3>📄 @Model.FormTitle</h3>
        <div class="mb-2">
            <a class="btn btn-link" asp-page="/Form/History" asp-route-id="@Model.FormId">Geçmiş Gönderimler</a>
            @if (!string.IsNullOrEmpty(Model.SpreadsheetUrl))
            {
                <a class="btn btn-primary" href="@Model.SpreadsheetUrl" target="_blank">Google Sheets'i Aç</a>
            }
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @* Render embed according to what we have *@
                @if (!string.IsNullOrEmpty(Model.JotFormEmbedHtml))
                {
                    @Html.Raw(Model.JotFormEmbedHtml)
                }
                else if (!string.IsNullOrEmpty(Model.JotFormJsUrl))
                {
                    <div id="jotform-container"></div>
                    <script src="@Model.JotFormJsUrl"></script>
                }
                else
                {
                    <div class="ratio ratio-16x9">
                        <iframe id="@Model.JotFormIFrameId"
                                src="@Model.JotFormIFrameSrc"
                                title="@Model.FormTitle"
                                style="border:0;min-width:100%;max-width:100%;height:539px;"
                                allow="geolocation; microphone; camera; fullscreen; payment"
                                scrolling="no"></iframe>
                    </div>

                    @* If a provider-specific embed handler is required, include it and initialise *@
                    @if (!string.IsNullOrEmpty(Model.JotFormEmbedHandlerUrl) && !Model.JotFormEmbedHandlerUrl.Contains("form.jotform.com"))
                    {
                        <script src="@Model.JotFormEmbedHandlerUrl"></script>
                        <script>
                            try {
                                window.jotformEmbedHandler("iframe[id='@Model.JotFormIFrameId']", "@Model.JotFormBaseUrl");
                            } catch (e) {
                                console && console.warn && console.warn('embed handler init failed', e);
                            }
                        </script>
                    }
                }

                <p class="small text-muted mt-2">
                    Webhook URL: <code>@Model.WebhookUrl</code>
                </p>
            </div>
        </div>
    </div>
</div>
