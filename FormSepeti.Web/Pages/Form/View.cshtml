@page
@model FormSepeti.Web.Pages.Form.ViewModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Form Detay";
}

<div class="row">
    <div class="col-12 mb-3">
        <h3>📄 @Model.FormTitle</h3>
        <div class="mb-2">
            <a class="btn btn-link" asp-page="/Form/History" asp-route-id="@Model.FormId">Geçmiş Gönderimler</a>
            @if (!string.IsNullOrEmpty(Model.SpreadsheetUrl))
            {
                <a class="btn btn-primary" href="@Model.SpreadsheetUrl" target="_blank">Google Sheets'i Aç</a>
            }
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @* ✅ Generic webhook için iframe (userId/formId/groupId query params ile) *@
                <div class="ratio ratio-16x9">
                    <iframe 
                        id="JotFormIFrame"
                        src="@($"https://form.jotform.com/{Model.JotFormId}?userId={Model.UserId}&formId={Model.FormId}&groupId={Model.GroupId}")"
                        title="@Model.FormTitle"
                        style="border:0;min-width:100%;max-width:100%;height:100%;"
                        allow="geolocation; microphone; camera; fullscreen; payment"
                        scrolling="yes">
                    </iframe>
                </div>

                <p class="small text-muted mt-2">
                    Webhook URL: <code>@Model.WebhookUrl</code>
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    // ✅ JotForm iframe auto-resize & submission tracking
    window.addEventListener('message', function(event) {
        if (event.data && event.data.action === 'submission-completed') {
            console.log('✅ Form submitted successfully!');
            // İsteğe bağlı: başarı mesajı göster veya redirect
        }
    });
</script>
