@page
@model FormSepeti.Web.Pages.Form.IndexModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Formlar";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-folder2-open text-primary me-2"></i>@Model.GroupName
                    </h2>
                    <p class="text-light-secondary mb-0">Bu gruptaki formları görüntüleyin ve doldurun</p>
                </div>
                <div class="d-flex gap-2">
                    @if (!string.IsNullOrEmpty(Model.SpreadsheetUrl))
                    {
                        <a class="btn btn-success" href="@Model.SpreadsheetUrl" target="_blank">
                            <i class="bi bi-file-earmark-spreadsheet me-2"></i>Google Sheets'i Aç
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    @if (Model.Forms != null && Model.Forms.Any())
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm stats-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-primary">
                                    <i class="bi bi-file-earmark-text"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="stats-label">Toplam Form</h6>
                                <h3 class="stats-value">@Model.Forms.Count()</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm stats-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-success">
                                    <i class="bi bi-gift"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="stats-label">Ücretsiz</h6>
                                <h3 class="stats-value">@Model.Forms.Count(f => f.IsFree)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm stats-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-warning">
                                    <i class="bi bi-star"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="stats-label">Erişilebilir</h6>
                                <h3 class="stats-value">@Model.Forms.Count(f => f.HasAccess)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Forms Grid -->
    @if (Model.Forms == null || !Model.Forms.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body empty-state">
                        <div class="empty-icon">
                            <i class="bi bi-inbox"></i>
                        </div>
                        <h4 class="empty-title">Bu grupta henüz form bulunmuyor</h4>
                        <p class="empty-text">Yeni form eklemek için admin paneline gidin veya farklı bir grup seçin.</p>
                        <a class="btn btn-primary" asp-page="/Dashboard/SelectGroup">
                            <i class="bi bi-arrow-left-right me-2"></i>Başka Grup Seç
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var f in Model.Forms)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm form-card @(f.HasAccess ? "" : "locked-form")">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title form-card-title mb-0">@f.Title</h5>
                                @if (f.IsFree)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-gift-fill me-1"></i>Ücretsiz
                                    </span>
                                }
                                else if (f.HasAccess)
                                {
                                    <span class="badge bg-primary">
                                        <i class="bi bi-unlock-fill me-1"></i>Erişilebilir
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-lock-fill me-1"></i>Kilitli
                                    </span>
                                }
                            </div>
                            
                            @if (!string.IsNullOrEmpty(f.Description))
                            {
                                <p class="form-card-description mb-4">@f.Description</p>
                            }
                            else
                            {
                                <p class="form-card-description-empty mb-4">Açıklama bulunmuyor</p>
                            }
                            
                            <div class="mt-auto">
                                <div class="d-grid gap-2">
                                    @if (f.HasAccess)
                                    {
                                        <form method="post" asp-page-handler="SetActiveForm">
                                            <input type="hidden" name="formId" value="@f.Id" />
                                            <input type="hidden" name="groupId" value="@Model.GroupId" />
                                            <button type="submit" class="btn btn-primary w-100">
                                                <i class="bi bi-pencil-square me-2"></i>Formu Doldur
                                            </button>
                                        </form>
                                        
                                        @if (f.SubmissionCount > 0)
                                        {
                                            <a class="btn btn-outline-secondary btn-sm" 
                                               asp-page="/Form/History" 
                                               asp-route-id="@f.Id">
                                                <i class="bi bi-clock-history me-2"></i>Geçmiş Gönderimler (@f.SubmissionCount)
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline-secondary btn-sm" disabled>
                                                <i class="bi bi-inbox me-2"></i>Henüz Gönderim Yok
                                            </button>
                                        }
                                    }
                                    else
                                    {
                                        <button class="btn btn-warning text-dark" disabled>
                                            <i class="bi bi-lock me-2"></i>Erişim İzni Yok
                                        </button>
                                        <a class="btn btn-outline-primary btn-sm" asp-page="/Package/Index">
                                            <i class="bi bi-shopping-cart me-2"></i>Paketi Satın Al
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
