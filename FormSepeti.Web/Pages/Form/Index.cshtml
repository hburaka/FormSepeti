@page
@model FormSepeti.Web.Pages.Form.IndexModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Formlar";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-folder2-open text-primary me-2"></i>@Model.GroupName
                    </h2>
                    <p class="text-muted mb-0">Bu gruptaki formları görüntüleyin ve doldurun</p>
                </div>
                <div class="d-flex gap-2">
                    <a class="btn btn-outline-secondary" asp-page="/Dashboard/SelectGroup">
                        <i class="bi bi-arrow-left-right me-2"></i>Grup Değiştir
                    </a>
                    @if (!string.IsNullOrEmpty(Model.SpreadsheetUrl))
                    {
                        <a class="btn btn-success" href="@Model.SpreadsheetUrl" target="_blank">
                            <i class="bi bi-file-earmark-spreadsheet me-2"></i>Google Sheets'i Aç
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    @if (Model.Forms != null && Model.Forms.Any())
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-primary">
                                    <i class="bi bi-file-earmark-text"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Toplam Form</h6>
                                <h3 class="mb-0">@Model.Forms.Count()</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-success">
                                    <i class="bi bi-gift"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Ücretsiz</h6>
                                <h3 class="mb-0">@Model.Forms.Count(f => !f.IsPaid)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-warning">
                                    <i class="bi bi-star"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Ücretli</h6>
                                <h3 class="mb-0">@Model.Forms.Count(f => f.IsPaid)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Forms Grid -->
    @if (Model.Forms == null || !Model.Forms.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                        <h4 class="text-muted">Bu grupta henüz form bulunmuyor</h4>
                        <p class="text-muted mb-4">Yeni form eklemek için admin paneline gidin veya farklı bir grup seçin.</p>
                        <a class="btn btn-primary" asp-page="/Dashboard/SelectGroup">
                            <i class="bi bi-arrow-left-right me-2"></i>Başka Grup Seç
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var f in Model.Forms)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm form-card">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@f.Title</h5>
                                @if (f.IsPaid)
                                {
                                    <span class="badge bg-warning">
                                        <i class="bi bi-star-fill me-1"></i>Ücretli
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-gift-fill me-1"></i>Ücretsiz
                                    </span>
                                }
                            </div>
                            
                            @if (!string.IsNullOrEmpty(f.Description))
                            {
                                <p class="text-muted small mb-4">@f.Description</p>
                            }
                            else
                            {
                                <p class="text-muted small mb-4 fst-italic">Açıklama bulunmuyor</p>
                            }
                            
                            <div class="mt-auto">
                                <div class="d-grid gap-2">
                                    <a class="btn btn-primary" asp-page="/Form/View" asp-route-id="@f.Id">
                                        <i class="bi bi-pencil-square me-2"></i>Formu Doldur
                                    </a>
                                    <a class="btn btn-outline-secondary btn-sm" asp-page="/Form/History" asp-route-id="@f.Id">
                                        <i class="bi bi-clock-history me-2"></i>Geçmiş Gönderimler
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
