@page
@model FormSepeti.Web.Pages.Form.HistoryModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Form Geçmişi";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-clock-history text-primary me-2"></i>Gönderim Geçmişi
                    </h2>
                    <p class="text-muted mb-0">
                        <i class="bi bi-file-earmark-text me-2"></i>
                        <strong>@Model.FormTitle</strong>
                        @if (!string.IsNullOrEmpty(Model.FormSheetName))
                        {
                            <span class="mx-2">•</span>
                            <i class="bi bi-table me-2"></i>
                            <span class="text-muted">Sheet: @Model.FormSheetName</span>
                        }
                    </p>
                </div>
                <div class="d-flex gap-2">
                    <a class="btn btn-outline-secondary" asp-page="/Form/Index" asp-route-groupId="@Model.GroupId">
                        <i class="bi bi-arrow-left me-2"></i>Formlara Dön
                    </a>
                    @if (!string.IsNullOrEmpty(Model.SpreadsheetUrl))
                    {
                        <a class="btn btn-success" href="@Model.SpreadsheetUrl" target="_blank">
                            <i class="bi bi-file-earmark-spreadsheet me-2"></i>Google Sheets'i Aç
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Stats -->
    @if (Model.Entries != null && Model.Entries.Any())
    {
        var successCount = Model.Entries.Count(e => e.Status.Contains("Başarılı", StringComparison.OrdinalIgnoreCase) || 
                                                      e.Status.Contains("Success", StringComparison.OrdinalIgnoreCase));
        var failedCount = Model.Entries.Count(e => e.Status.Contains("Başarısız", StringComparison.OrdinalIgnoreCase) || 
                                                     e.Status.Contains("Failed", StringComparison.OrdinalIgnoreCase));
        var lastEntry = Model.Entries.FirstOrDefault();

        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-primary">
                                    <i class="bi bi-send-check"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Toplam Gönderim</h6>
                                <h3 class="mb-0">@Model.Entries.Count()</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-success">
                                    <i class="bi bi-check-circle"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Başarılı</h6>
                                <h3 class="mb-0">@successCount</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-danger">
                                    <i class="bi bi-x-circle"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Başarısız</h6>
                                <h3 class="mb-0">@failedCount</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-info">
                                    <i class="bi bi-calendar-event"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Son Gönderim</h6>
                                <h6 class="mb-0">
                                    @if (lastEntry != null)
                                    {
                                        @lastEntry.SubmittedDate.ToString("dd.MM.yyyy")
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Entries List -->
    @if (Model.Entries == null || !Model.Entries.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                        <h4 class="text-muted">Henüz gönderim yapılmamış</h4>
                        <p class="text-muted mb-4">Bu form için henüz bir gönderim kaydı bulunmuyor.</p>
                        <a class="btn btn-primary" asp-page="/Form/View" asp-route-id="@Model.FormId">
                            <i class="bi bi-pencil-square me-2"></i>İlk Gönderimi Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul me-2 text-primary"></i>
                            Tüm Gönderimler
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">#</th>
                                        <th><i class="bi bi-calendar3 me-1"></i>Tarih</th>
                                        <th><i class="bi bi-clock me-1"></i>Saat</th>
                                        <th><i class="bi bi-hash me-1"></i>Submission ID</th>
                                        <th><i class="bi bi-table me-1"></i>Sheet Satırı</th>
                                        <th><i class="bi bi-check-circle me-1"></i>Durum</th>
                                        <th class="text-end pe-4">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Entries)
                                    {
                                        <tr class="history-row">
                                            <td class="ps-4">
                                                <span class="badge bg-secondary">@item.Index</span>
                                            </td>
                                            <td>
                                                <strong>@item.SubmittedDate.ToString("dd.MM.yyyy")</strong>
                                            </td>
                                            <td>
                                                <span class="text-muted">@item.SubmittedDate.ToString("HH:mm:ss")</span>
                                            </td>
                                            <td>
                                                <code class="text-muted small">@item.SubmissionId.Substring(0, Math.Min(8, item.SubmissionId.Length))</code>
                                            </td>
                                            <td>
                                                @if (item.RowNumber > 0)
                                                {
                                                    <span class="badge bg-info">Satır @item.RowNumber</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-@item.StatusColor">
                                                    @if (item.StatusColor == "success")
                                                    {
                                                        <i class="bi bi-check-circle me-1"></i>
                                                    }
                                                    else if (item.StatusColor == "danger")
                                                    {
                                                        <i class="bi bi-x-circle me-1"></i>
                                                    }
                                                    else if (item.StatusColor == "warning")
                                                    {
                                                        <i class="bi bi-exclamation-circle me-1"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-question-circle me-1"></i>
                                                    }
                                                    @item.Status
                                                </span>
                                            </td>
                                            <td class="text-end pe-4">
                                                @if (!string.IsNullOrEmpty(item.GoogleSheetRowUrl) && item.RowNumber > 0)
                                                {
                                                    <a href="@item.GoogleSheetRowUrl" 
                                                       target="_blank" 
                                                       class="btn btn-sm btn-success"
                                                       data-bs-toggle="tooltip" 
                                                       title="Google Sheets'te Satır @item.RowNumber'ı Aç">
                                                        <i class="bi bi-box-arrow-up-right"></i>
                                                        Sheets'te Aç
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                                        <i class="bi bi-dash-circle"></i>
                                                        Bağlantı Yok
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-white text-muted small py-3">
                        <i class="bi bi-info-circle me-1"></i>
                        Toplam <strong>@Model.Entries.Count()</strong> gönderim kaydı gösteriliyor
                        @if (Model.Entries.Any())
                        {
                            <span class="mx-2">•</span>
                            <span>İlk gönderim: @Model.Entries.Last().SubmittedDate.ToString("dd.MM.yyyy HH:mm")</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .history-row {
        transition: all 0.2s ease;
    }
    
    .history-row:hover {
        background-color: rgba(99, 102, 241, 0.05);
        transform: translateX(2px);
    }
    
    .stats-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-size: 1.5rem;
        color: white;
    }
    
    code {
        background: rgba(0, 0, 0, 0.05);
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.85rem;
    }
</style>

<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>
