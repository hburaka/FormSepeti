@page
@model FormSepeti.Web.Pages.Form.HistoryModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Form Geçmişi";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-clock-history text-primary me-2"></i>Gönderim Geçmişi
                    </h2>
                    <p class="text-muted mb-0">@Model.FormTitle</p>
                </div>
                <div>
                    <a class="btn btn-outline-secondary" asp-page="/Form/Index" asp-route-groupId="@Model.GroupId">
                        <i class="bi bi-arrow-left me-2"></i>Formlara Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Stats -->
    @if (Model.Entries != null && Model.Entries.Any())
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-primary">
                                    <i class="bi bi-send-check"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Toplam Gönderim</h6>
                                <h3 class="mb-0">@Model.Entries.Count()</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-success">
                                    <i class="bi bi-check-circle"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Başarılı</h6>
                                <h3 class="mb-0">@Model.Entries.Count(e => e.Status == "Başarılı" || e.Status == "Success")</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="stats-icon bg-info">
                                    <i class="bi bi-calendar-event"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-0">Son Gönderim</h6>
                                <h6 class="mb-0">
                                    @{
                                        var lastEntry = Model.Entries.FirstOrDefault();
                                        if (lastEntry != default)
                                        {
                                            @lastEntry.Date
                                        }
                                        else
                                        {
                                            @:Yok
                                        }
                                    }
                                </h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Entries List -->
    @if (Model.Entries == null || !Model.Entries.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                        <h4 class="text-muted">Henüz gönderim yapılmamış</h4>
                        <p class="text-muted mb-4">Bu form için henüz bir gönderim kaydı bulunmuyor.</p>
                        <a class="btn btn-primary" asp-page="/Form/View" asp-route-id="@ViewContext.RouteData.Values["id"]">
                            <i class="bi bi-pencil-square me-2"></i>İlk Gönderimi Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul me-2 text-primary"></i>
                            Tüm Gönderimler
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">#</th>
                                        <th>Tarih</th>
                                        <th>Saat</th>
                                        <th>Satır No</th>
                                        <th>Durum</th>
                                        <th class="text-end pe-4">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Entries)
                                    {
                                        <tr class="history-row">
                                            <td class="ps-4">
                                                <span class="badge bg-secondary">@item.Index</span>
                                            </td>
                                            <td>
                                                <i class="bi bi-calendar3 text-muted me-2"></i>
                                                @DateTime.TryParse(item.Date, out var date) 
                                                    ? date.ToString("dd.MM.yyyy")
                                                    : item.Date
                                            </td>
                                            <td>
                                                <i class="bi bi-clock text-muted me-2"></i>
                                                @(DateTime.TryParse(item.Date, out var time) 
                                                    ? time.ToString("HH:mm:ss")
                                                    : "-")
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@item.Row</span>
                                            </td>
                                            <td>
                                                @if (item.Status == "Başarılı" || item.Status == "Success")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle me-1"></i>@item.Status
                                                    </span>
                                                }
                                                else if (item.Status == "Başarısız" || item.Status == "Failed")
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-x-circle me-1"></i>@item.Status
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="bi bi-exclamation-circle me-1"></i>@item.Status
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-end pe-4">
                                                <button class="btn btn-sm btn-outline-primary" 
                                                        type="button" 
                                                        data-bs-toggle="tooltip" 
                                                        title="Detayları Görüntüle">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-white text-muted small py-3">
                        <i class="bi bi-info-circle me-1"></i>
                        Toplam <strong>@Model.Entries.Count()</strong> gönderim kaydı gösteriliyor
                    </div>
                </div>
            </div>
        </div>
    }
</div>
