@* ✅ Identity bağımlılıklarını kaldır *@
@{
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
    var email = User?.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
    var userName = email?.Split('@')[0] ?? "Kullanıcı";
}

@if (isAuth)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" 
           data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-user-circle me-2"></i>
            <span>@userName</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end modern-dropdown" aria-labelledby="userDropdown">
            <li>
                <a class="dropdown-item" asp-page="/Dashboard/Index">
                    <i class="fas fa-home me-2"></i>Dashboard
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-page="/Account/Profile">
                    <i class="fas fa-user me-2"></i>Profil
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-page="/Package/Index">
                    <i class="fas fa-box me-2"></i>Paketlerim
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-page="/Sheets/Connect">
                    <i class="fab fa-google me-2"></i>Google Sheets
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form method="post" action="@Url.Action("Logout", "Account")" id="logoutForm">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-page="/Account/Login">
            <i class="fas fa-sign-in-alt me-2"></i>Giriş
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn btn-primary-gradient px-3 ms-2" asp-page="/Account/Register">
            <i class="fas fa-user-plus me-2"></i>Kayıt Ol
        </a>
    </li>
}
