@* navbar partial for Razor Pages: outputs <li> elements only *@
@{
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
    var name = User?.Identity?.Name ?? "Hesap";
}
@if (isAuth)
{
    <li><a asp-page="/Form/Index">Formlar</a></li>

    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            Hoşgeldin, @name <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li><a asp-page="/Dashboard/Index">Dashboard</a></li>
            <li><a asp-page="/Account/Profile">Profil</a></li>
            <li><a asp-page="/Package/Index">Paketlerim</a></li>
            <li><a asp-page="/Sheets/Connect">Google Sheets Bağla</a></li>
            <li role="separator" class="divider"></li>
            <li>
                <form method="post" asp-controller="Account" asp-action="Logout" class="navbar-form">
                    <button type="submit" class="btn btn-link">Çıkış Yap</button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li><a asp-page="/Account/Login">Giriş</a></li>
    <li><a asp-page="/Account/Register">Kayıt</a></li>
}
