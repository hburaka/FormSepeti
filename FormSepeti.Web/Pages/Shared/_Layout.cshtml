<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FormSepeti</title>

    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Modern Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top modern-navbar">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" asp-page="/Index">
                <i class="fas fa-clipboard-list me-2"></i>
                <span class="brand-text">Form<span class="text-gradient">Sepeti</span></span>
            </a>
            
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Dashboard/Index">
                            <i class="fas fa-home me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Form/Index">
                            <i class="fas fa-file-alt me-2"></i>Formlarım
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Package/Index">
                            <i class="fas fa-box me-2"></i>Paketler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Sheets/Connect">
                            <i class="fab fa-google me-2"></i>Google Sheets
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <!-- Background Gradient -->
    <div class="gradient-bg"></div>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container-fluid px-4 py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="modern-footer">
        <div class="container-fluid px-4">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">&copy; @DateTime.Now.Year FormSepeti - Tüm hakları saklıdır</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="footer-link me-3">Gizlilik</a>
                    <a href="#" class="footer-link me-3">Kullanım Şartları</a>
                    <a href="#" class="footer-link">Destek</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
