<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- ✅ YENİ: SEO Meta Tags -->
    <meta name="description" content="FormSepeti - Form verilerinizi otomatik olarak Google Sheets'e kaydedin">
    <meta name="keywords" content="form, google sheets, otomatiksyon, veri toplama">
    <meta name="author" content="FormSepeti">
    
    <!-- ✅ YENİ: Open Graph Tags (Sosyal medya paylaşımları için) -->
    <meta property="og:title" content="@ViewData["Title"] - FormSepeti">
    <meta property="og:description" content="Form verilerinizi otomatik olarak Google Sheets'e kaydedin">
    <meta property="og:type" content="website">
    
    <!-- ✅ YENİ: Favicon -->
    <link rel="icon" type="image/png" href="~/favicon.png">
    
    <title>@ViewData["Title"] - FormSepeti</title>

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net">
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    </head>
<body>
    <!-- Modern Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Index">
                <span class="text-gradient">FormSepeti</span>
            </a>
            
            <!-- ✅ YENİ: Navbar Toggle Button (Mobil için) -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- ✅ YENİ: Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-lg-center">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- Dashboard Link -->
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboard/Index">
                                <i class="fas fa-home me-1"></i>Dashboard
                            </a>
                        </li>
                        
                        <!-- Paketlerim Link -->
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Package/Index">
                                <i class="fas fa-box me-1"></i>Paketler
                            </a>
                        </li>
                        
                        <!-- Google Sheets Link -->
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Sheets/Connect">
                                <i class="fab fa-google me-1"></i>Google Bağlantısı
                            </a>
                        </li>
                        
                        <!-- User Dropdown -->
                        <li class="nav-item dropdown ms-lg-2">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" 
                               href="#" 
                               id="userDropdown" 
                               role="button" 
                               data-bs-toggle="dropdown" 
                               aria-expanded="false">
                                
                                @* ✅ PROFIL FOTOĞRAFI *@
                                @{
                                    var photoUrl = User.FindFirst("ProfilePhotoUrl")?.Value;
                                    var email = User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "User";
                                    
                                    // ✅ YENİ: FirstName ve LastName claim'lerini al
                                    var firstName = User.FindFirst("FirstName")?.Value;
                                    var lastName = User.FindFirst("LastName")?.Value;
                                    
                                    // ✅ YENİ: Ad Soyad varsa göster, yoksa email'in ilk harfi
                                    var displayName = !string.IsNullOrWhiteSpace(firstName) && !string.IsNullOrWhiteSpace(lastName)
                                        ? $"{firstName} {lastName}"
                                        : email;
                                    
                                    var initials = !string.IsNullOrWhiteSpace(firstName) && !string.IsNullOrWhiteSpace(lastName)
                                        ? $"{firstName[0]}{lastName[0]}".ToUpper()
                                        : email.Length > 0 ? email[0].ToString().ToUpper() : "U";
                                }
                                
                                @if (!string.IsNullOrEmpty(photoUrl))
                                {
                                    <img src="@photoUrl" 
                                         alt="Profile" 
                                         class="rounded-circle me-2" 
                                         width="32" 
                                         height="32"
                                         onerror="this.onerror=null; this.src='data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 width=%2732%27 height=%2732%27%3E%3Crect fill=%27%236366f1%27 width=%2732%27 height=%2732%27/%3E%3Ctext x=%2750%25%27 y=%2750%25%27 dominant-baseline=%27middle%27 text-anchor=%27middle%27 fill=%27white%27 font-size=%2716%27%3E@initials%3C/text%3E%3C/svg%3E';">
                                }
                                else
                                {
                                    <div class="avatar-placeholder rounded-circle me-2 d-inline-flex align-items-center justify-content-center">
                                        @initials
                                    </div>
                                }
                                
                                <span>@displayName</span>
                            </a>
                            
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-page="/Account/Profile">
                                    <i class="fas fa-user me-2"></i>Profil
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Giriş Yap Link -->
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Account/Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                            </a>
                        </li>
                        
                        <!-- Kayıt Ol Button -->
                        <li class="nav-item ms-lg-2">
                            <a class="btn btn-light btn-sm" asp-page="/Account/Register">
                                <i class="fas fa-user-plus me-1"></i>Kayıt Ol
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Background Gradient -->
    <div class="gradient-bg"></div>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container-fluid px-4 py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="modern-footer">
        <div class="container-fluid px-4">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">&copy; @DateTime.Now.Year FormSepeti - Tüm hakları saklıdır</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="footer-link me-3">Gizlilik</a>
                    <a href="#" class="footer-link me-3">Kullanım Şartları</a>
                    <a href="#" class="footer-link">Destek</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Theme Toggle Button -->
    <button id="themeToggle" class="theme-toggle" aria-label="Tema Değiştir">
        <i class="fas fa-moon" id="themeIcon"></i>
        <span class="theme-toggle-text" id="themeText">Light Tema</span>
    </button>

    <!-- Theme Toggle Script -->
    <script>
        // Theme toggle functionality
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const themeText = document.getElementById('themeText');
        const html = document.documentElement;

        // ✅ BONUS 1: Sistem Tercihini Algılama
        const savedTheme = localStorage.getItem('theme');
        const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const initialTheme = savedTheme || (systemPrefersDark ? 'dark' : 'light');

        html.setAttribute('data-theme', initialTheme);
        updateThemeUI(initialTheme);

        // Toggle theme on button click
        themeToggle.addEventListener('click', () => {
            toggleTheme();
        });

        // ✅ BONUS 2: Klavye Desteği (Enter/Space)
        themeToggle.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                toggleTheme();
            }
        });

        // ✅ Sistem tema değişikliğini dinle (real-time)
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
            // Eğer kullanıcı manuel tercih yapmamışsa, sistem tercihini takip et
            if (!localStorage.getItem('theme')) {
                const newTheme = e.matches ? 'dark' : 'light';
                html.setAttribute('data-theme', newTheme);
                updateThemeUI(newTheme);
            }
        });

        function toggleTheme() {
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeUI(newTheme);
            
            // Smooth transition
            html.style.transition = 'background-color 0.3s ease, color 0.3s ease';
            setTimeout(() => {
                html.style.transition = '';
            }, 300);

            // ✅ Accessibility: Announce theme change
            announceThemeChange(newTheme);
        }

        function updateThemeUI(theme) {
            if (theme === 'light') {
                themeIcon.className = 'fas fa-sun';
                themeText.textContent = 'Dark Tema';
                themeToggle.setAttribute('aria-label', 'Dark temaya geç');
            } else {
                themeIcon.className = 'fas fa-moon';
                themeText.textContent = 'Light Tema';
                themeToggle.setAttribute('aria-label', 'Light temaya geç');
            }
        }

        // ✅ Screen reader için tema değişikliğini duyur
        function announceThemeChange(theme) {
            const announcement = document.createElement('div');
            announcement.setAttribute('role', 'status');
            announcement.setAttribute('aria-live', 'polite');
            announcement.className = 'sr-only';
            announcement.textContent = theme === 'light' ? 'Light tema aktif' : 'Dark tema aktif';
            document.body.appendChild(announcement);
            
            setTimeout(() => {
                document.body.removeChild(announcement);
            }, 1000);
        }

        // ✅ Console'da debug info
        console.log('🎨 Theme System Initialized');
        console.log('   Saved Theme:', savedTheme || 'None');
        console.log('   System Prefers:', systemPrefersDark ? 'Dark' : 'Light');
        console.log('   Active Theme:', initialTheme);
    </script>

    <!-- Bootstrap 5.3 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
