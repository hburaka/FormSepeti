@page
@model FormSepeti.Web.Pages.Sheets.ConnectModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Google Sheets Bağlantısı";         
}

<!-- ✅ Notifications -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <i class="fab fa-google me-2 text-success"></i>
                    Google Sheets Bağlantısı
                </h2>
                
                @switch (Model.ConnectionStatus)
                {
                    case "connected":
                        <span class="badge badge-lg" style="background: linear-gradient(135deg, #059669 0%, #047857 100%); color: #fff; font-weight: 600;">
                            <i class="fas fa-check-circle me-1"></i>Bağlı
                        </span>
                        break;
                    case "expired":
                        <span class="badge badge-lg" style="background: linear-gradient(135deg, #d97706 0%, #b45309 100%); color: #fff; font-weight: 600;">
                            <i class="fas fa-exclamation-triangle me-1"></i>Süresi Dolmuş
                        </span>
                        break;
                    case "needs_permissions":
                        <span class="badge badge-lg" style="background: linear-gradient(135deg, #0891b2 0%, #0e7490 100%); color: #fff; font-weight: 600;">
                            <i class="fas fa-info-circle me-1"></i>İzin Gerekli
                        </span>
                        break;
                    default:
                        <span class="badge badge-lg" style="background: linear-gradient(135deg, #64748b 0%, #475569 100%); color: #fff; font-weight: 600;">
                            <i class="fas fa-unlink me-1"></i>Bağlı Değil
                        </span>
                        break;
                }
            </div>
        </div>
    </div>

    @if (Model.IsAlreadyConnected && Model.ConnectionStatus == "connected")
    {
        <!-- ✅ BAĞLI DURUM -->
        <div class="row g-4">
            <!-- Ana Kart -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                        <h5 class="mb-0 text-white">
                            <i class="fas fa-user-circle me-2"></i>Bağlantı Detayları
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Hesap Bilgileri -->
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="p-3 bg-light rounded">
                                    <label class="text-muted small mb-1 d-block">Bağlı Hesap</label>
                                    <p class="mb-0 fw-semibold">
                                        <i class="fas fa-user-circle me-2 text-primary"></i>
                                        @Model.UserEmail
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3 bg-light rounded">
                                    <label class="text-muted small mb-1 d-block">Aktif Sheets</label>
                                    <p class="mb-0 fw-semibold">
                                        <i class="fas fa-file-spreadsheet me-2 text-success"></i>
                                        @Model.ActiveSheetsCount dosya
                                    </p>
                                </div>
                            </div>
                        </div>

                        @if (Model.LastConnectionDate.HasValue)
                        {
                            <div class="alert alert-info mb-4">
                                <i class="fas fa-clock me-2"></i>
                                <strong>Son Bağlantı:</strong> @Model.LastConnectionDate.Value.ToString("dd MMMM yyyy HH:mm")
                            </div>
                        }

                        <!-- Butonlar -->
                        <div class="d-flex gap-2 flex-wrap">
                            <a class="btn btn-primary" asp-page="/Dashboard/Index">
                                <i class="fas fa-home me-2"></i>Dashboard'a Dön
                            </a>
                            <button type="button" class="btn btn-info" id="testConnectionBtn">
                                <i class="fas fa-vial me-2"></i>Bağlantıyı Test Et
                            </button>
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#disconnectModal">
                                <i class="fas fa-unlink me-2"></i>Bağlantıyı Kaldır
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Yan Bilgi Kartları -->
            <div class="col-lg-4">
                <!-- Özellikler -->
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-lightbulb me-2 text-warning"></i>Özellikler
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Otomatik veri kaydetme</small>
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Gerçek zamanlı senkronizasyon</small>
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Grup bazlı organizasyon</small>
                            </li>
                            <li class="mb-0">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Güvenli şifreleme</small>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Güvenlik -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-shield-alt me-2 text-info"></i>Güvenlik
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="small text-muted mb-0">
                            Token'larınız AES-256 ile şifrelenir. 
                            Verileriniz yalnızca Google Sheets oluşturmak için kullanılır.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- ✅ BAĞLANTI GEREKLİ DURUM -->
        <div class="row g-4">
            <!-- Ana Bağlantı Kartı -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-plug me-2"></i>Google Hesabını Bağla
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                @Model.ErrorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Durum Mesajları -->
                        @if (Model.IsGoogleLogin && Model.ConnectionStatus == "needs_permissions")
                        {
                            <div class="alert alert-warning mb-4">
                                <h6 class="alert-heading mb-2">
                                    <i class="fas fa-exclamation-circle me-2"></i>Ek İzin Gerekiyor
                                </h6>
                                <p class="mb-0 small">
                                    Google ile giriş yaptınız ancak form verilerini kaydetmek için 
                                    <strong>Google Sheets ve Drive izinleri</strong> vermeniz gerekiyor.
                                </p>
                            </div>
                        }
                        else if (Model.ConnectionStatus == "expired")
                        {
                            <div class="alert alert-danger mb-4">
                                <h6 class="alert-heading mb-2">
                                    <i class="fas fa-clock me-2"></i>Token Süresi Dolmuş
                                </h6>
                                <p class="mb-0 small">
                                    Google Sheets bağlantınızın süresi dolmuş. Lütfen yeniden bağlanın.
                                </p>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-4">
                                Formlardan gelen verileri otomatik olarak Google Sheets'e kaydetmek için 
                                Google hesabınızı bağlamanız gerekiyor.
                            </p>
                        }

                        <!-- Adımlar -->
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <h6 class="mb-3">
                                    <i class="fas fa-list-check me-2 text-primary"></i>Bağlantı Adımları
                                </h6>
                                <ol class="ps-3 mb-0">
                                    <li class="mb-2">Aşağıdaki butona tıklayın</li>
                                    @if (!Model.IsGoogleLogin)
                                    {
                                        <li class="mb-2">Google hesabınızla giriş yapın</li>
                                    }
                                    <li class="mb-2">İzinleri onaylayın</li>
                                    <li class="mb-0 text-success fw-semibold">
                                        <i class="fas fa-check me-1"></i>Otomatik yönlendirileceksiniz
                                    </li>
                                </ol>
                            </div>
                        </div>

                        <!-- Bağlan Butonu -->
                        <form method="post" id="connectForm">
                            <button type="submit" class="btn btn-success btn-lg" id="connectBtn">
                                <span class="button-content">
                                    <i class="fab fa-google me-2"></i>
                                    @if (Model.IsGoogleLogin)
                                    {
                                        <text>Sheets İzni Ver</text>
                                    }
                                    else if (Model.ConnectionStatus == "expired")
                                    {
                                        <text>Yeniden Bağlan</text>
                                    }
                                    else
                                    {
                                        <text>Google ile Bağlan</text>
                                    }
                                </span>
                                <span class="button-loading d-none">
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    Yönlendiriliyor...
                                </span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Yan Bilgi Kartları -->
            <div class="col-lg-4">
                <!-- Neden Gerekli -->
                <div class="card border-0 shadow-sm mb-3">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-question-circle me-2 text-warning"></i>Neden Gerekli?
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Otomatik Sheets oluşturma</small>
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Anlık veri kaydetme</small>
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Grup organizasyonu</small>
                            </li>
                            <li class="mb-0">
                                <i class="fas fa-check text-success me-2"></i>
                                <small>Güvenli yönetim</small>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Gerekli İzinler -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-key me-2 text-primary"></i>Gerekli İzinler
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                            <i class="fas fa-table fa-2x text-success me-3"></i>
                            <div>
                                <strong class="d-block">Google Sheets</strong>
                                <small class="text-muted">Dosya oluştur ve düzenle</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-folder fa-2x text-success me-3"></i>
                            <div>
                                <strong class="d-block">Google Drive</strong>
                                <small class="text-muted">Dosya yönetimi</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- ✅ Disconnect Modal -->
<div class="modal fade" id="disconnectModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Bağlantıyı Kaldır
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Google Sheets bağlantısını kaldırmak istediğinize emin misiniz?</p>
                <div class="alert alert-warning mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Uyarı:</strong> Formlardan gelen yeni veriler artık Google Sheets'e kaydedilmeyecek.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form method="post" asp-page-handler="Disconnect" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-unlink me-2"></i>Evet, Kaldır
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Connect Form Loading
        document.getElementById('connectForm')?.addEventListener('submit', function() {
            const btn = document.getElementById('connectBtn');
            btn.disabled = true;
            btn.querySelector('.button-content').classList.add('d-none');
            btn.querySelector('.button-loading').classList.remove('d-none');
        });

        // Test Connection
        document.getElementById('testConnectionBtn')?.addEventListener('click', async function() {
            const btn = this;
            const originalHTML = btn.innerHTML;
            
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Test ediliyor...';
            
            try {
                const response = await fetch('?handler=TestConnection', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    btn.innerHTML = '<i class="fas fa-check me-2"></i>Bağlantı OK!';
                    btn.classList.remove('btn-info');
                    btn.classList.add('btn-success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    btn.innerHTML = '<i class="fas fa-times me-2"></i>Başarısız';
                    btn.classList.remove('btn-info');
                    btn.classList.add('btn-danger');
                    setTimeout(() => {
                        btn.innerHTML = originalHTML;
                        btn.classList.remove('btn-danger');
                        btn.classList.add('btn-info');
                        btn.disabled = false;
                    }, 2000);
                }
            } catch (error) {
                console.error('Test failed:', error);
                btn.innerHTML = originalHTML;
                btn.disabled = false;
            }
        });

        // Auto-dismiss alerts
        document.querySelectorAll('.alert-dismissible').forEach(alert => {
            setTimeout(() => alert.querySelector('.btn-close')?.click(), 5000);
        });
    </script>
}

