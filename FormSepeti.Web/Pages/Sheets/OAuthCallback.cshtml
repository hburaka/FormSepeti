@page
@model FormSepeti.Web.Pages.Sheets.OAuthCallbackModel
@{
    Layout = "/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Google Bağlantı İşleniyor";
}

<div class="row justify-content-center fade-in-up">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                @if (Model.Success)
                {
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success fa-4x"></i>
                    </div>
                    <h4 class="text-success mb-3">Bağlantı Başarılı!</h4>
                    <p class="text-muted mb-4">Google Sheets başarıyla bağlandı. Yönlendiriliyorsunuz...</p>
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                }
                else
                {
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-danger fa-4x"></i>
                    </div>
                    <h4 class="text-danger mb-3">Bağlantı Başarısız</h4>
                    <p class="text-muted mb-4">@Model.ErrorMessage</p>
                    <a class="btn btn-primary" asp-page="/Sheets/Connect">
                        <i class="fas fa-redo me-2"></i>Tekrar Dene
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@if (Model.Success)
{
    @section Scripts {
        <script>
            // ✅ 2 saniye sonra otomatik yönlendir
            setTimeout(() => {
                window.location.href = '/Dashboard/Index';
            }, 2000);
        </script>
    }
}
