@page
@model FormSepeti.Web.Areas.Admin.Pages.Admins.IndexModel
@{
    ViewData["Title"] = "Admin Yönetimi";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-user-shield text-danger me-2"></i>
            Admin Yönetimi
        </h2>
        <p class="text-muted mb-0">
            <i class="fas fa-exclamation-triangle text-warning me-1"></i>
            <strong>Dikkat:</strong> Bu sayfa sadece SuperAdmin'ler tarafından erişilebilir.
        </p>
    </div>
    <div>
        <a class="btn btn-danger" asp-page="/Admins/Create">
            <i class="fas fa-user-plus me-2"></i>Yeni Admin Ekle
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-lg bg-danger bg-opacity-10 text-danger rounded">
                            <i class="fas fa-user-shield fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Toplam Admin</h6>
                        <h3 class="mb-0">@Model.TotalAdmins</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-lg bg-success bg-opacity-10 text-success rounded">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Aktif Admin</h6>
                        <h3 class="mb-0">@Model.ActiveAdmins</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-lg bg-warning bg-opacity-10 text-warning rounded">
                            <i class="fas fa-times-circle fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Pasif Admin</h6>
                        <h3 class="mb-0">@Model.InactiveAdmins</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="fas fa-search me-1"></i>Arama
                    </label>
                    <input type="text"
                           class="form-control"
                           name="searchTerm"
                           value="@Model.SearchTerm"
                           placeholder="Username, isim veya email ile ara...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="fas fa-user-tag me-1"></i>Rol
                    </label>
                    <select class="form-select" name="roleFilter">
                        <option value="">Tümü</option>
                        <option value="SuperAdmin" selected="@(Model.RoleFilter == "SuperAdmin")">SuperAdmin</option>
                        <option value="Admin" selected="@(Model.RoleFilter == "Admin")">Admin</option>
                        <option value="Editor" selected="@(Model.RoleFilter == "Editor")">Editor</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="fas fa-filter me-1"></i>Durum
                    </label>
                    <select class="form-select" name="statusFilter">
                        <option value="all" selected="@(Model.StatusFilter == "all" || string.IsNullOrEmpty(Model.StatusFilter))">Tümü</option>
                        <option value="active" selected="@(Model.StatusFilter == "active")">Aktif</option>
                        <option value="inactive" selected="@(Model.StatusFilter == "inactive")">Pasif</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Ara
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Admins Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>
            Admin Listesi (@Model.Admins.Count)
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Admins.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Username</th>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Durum</th>
                            <th>Kayıt Tarihi</th>
                            <th>Son Giriş</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var admin in Model.Admins)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-secondary">#@admin.AdminId</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-danger bg-opacity-10 text-danger rounded me-2">
                                            <i class="fas fa-user-shield"></i>
                                        </div>
                                        <strong>@admin.Username</strong>
                                    </div>
                                </td>
                                <td>@admin.FullName</td>
                                <td>
                                    <small class="text-muted">@admin.Email</small>
                                </td>
                                <td>
                                    @if (admin.Role == "SuperAdmin")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-crown me-1"></i>SuperAdmin
                                        </span>
                                    }
                                    else if (admin.Role == "Admin")
                                    {
                                        <span class="badge bg-primary">
                                            <i class="fas fa-user-shield me-1"></i>Admin
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-edit me-1"></i>Editor
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (admin.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle me-1"></i>Pasif
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @admin.CreatedDate.ToString("dd.MM.yyyy")
                                    </small>
                                </td>
                                <td>
                                    @if (admin.LastLoginDate.HasValue)
                                    {
                                        <small class="text-muted">
                                            @admin.LastLoginDate.Value.ToString("dd.MM.yyyy HH:mm")
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-primary"
                                           asp-page="/Admins/Edit"
                                           asp-route-id="@admin.AdminId"
                                           data-bs-toggle="tooltip"
                                           title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post"
                                              asp-page-handler="ToggleStatus"
                                              asp-route-adminId="@admin.AdminId"
                                              class="d-inline">
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-warning"
                                                    data-bs-toggle="tooltip"
                                                    title="@(admin.IsActive ? "Pasifleştir" : "Aktifleştir")">
                                                <i class="fas fa-@(admin.IsActive ? "ban" : "check")"></i>
                                            </button>
                                        </form>
                                        <form method="post"
                                              asp-page-handler="Delete"
                                              asp-route-adminId="@admin.AdminId"
                                              class="d-inline"
                                              onsubmit="return confirm('Bu admin kullanıcıyı silmek istediğinize emin misiniz? Bu işlem geri alınamaz!');">
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="tooltip"
                                                    title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">Admin bulunamadı</p>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.RoleFilter) || !string.IsNullOrEmpty(Model.StatusFilter))
                {
                    <a asp-page="/Admins/Index" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-times me-1"></i>Filtreleri Temizle
                    </a>
                }
            </div>
        }
    </div>
</div>

@* Tooltip init removed — handled centrally in layout via admin-coreui.js *@