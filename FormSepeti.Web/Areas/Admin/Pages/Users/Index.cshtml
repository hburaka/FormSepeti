@page
@model FormSepeti.Web.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-users text-primary me-2"></i>
            Kullanıcı Yönetimi
        </h2>
        <p class="text-muted mb-0">Sistemdeki tüm kullanıcıları görüntüleyin ve yönetin</p>
    </div>
    <div>
        <div class="btn-group me-2">
            <a asp-page-handler="ExportExcel" class="btn btn-success btn-sm">
                <i class="fas fa-file-excel me-1"></i>Excel
            </a>
            <a asp-page-handler="ExportCsv" class="btn btn-success btn-sm">
                <i class="fas fa-file-csv me-1"></i>CSV
            </a>
        </div>
        <a class="btn btn-primary" asp-page="/Users/Create">
            <i class="fas fa-user-plus me-2"></i>Yeni Kullanıcı
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-lg bg-primary bg-opacity-10 text-primary rounded">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Toplam Kullanıcı</h6>
                        <h3 class="mb-0">@Model.TotalUsers</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-lg bg-success bg-opacity-10 text-success rounded">
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Aktif Kullanıcı</h6>
                        <h3 class="mb-0">@Model.ActiveUsers</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-lg bg-warning bg-opacity-10 text-warning rounded">
                            <i class="fas fa-user-times fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Pasif Kullanıcı</h6>
                        <h3 class="mb-0">@Model.InactiveUsers</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">
                        <i class="fas fa-search me-1"></i>Arama
                    </label>
                    <input type="text"
                           class="form-control"
                           name="searchTerm"
                           value="@Model.SearchTerm"
                           placeholder="Email veya telefon ile ara...">
                </div>
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="fas fa-filter me-1"></i>Durum
                    </label>
                    <select class="form-select" name="statusFilter">
                        <option value="all" selected="@(Model.StatusFilter == "all" || string.IsNullOrEmpty(Model.StatusFilter))">Tümü</option>
                        <option value="active" selected="@(Model.StatusFilter == "active")">Aktif</option>
                        <option value="inactive" selected="@(Model.StatusFilter == "inactive")">Pasif</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Ara
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>
            Kullanıcı Listesi (@Model.Users.Count)
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Users.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Durum</th>
                            <th>Aktif Paket</th>
                            <th>Kayıt Tarihi</th>
                            <th>Son Giriş</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-secondary">#@user.UserId</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded me-2">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <strong>@user.Email</strong>
                                            @if (!user.IsActivated)
                                            {
                                                <br />
                                    
                                                <small class="text-danger">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>Email doğrulanmamış
                                                </small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">@user.PhoneNumber</span>
                                </td>
                                <td>
                                    @if (user.IsActive && user.IsActivated)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle me-1"></i>Pasif
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (user.ActivePackageCount > 0)
                                    {
                                        <span class="badge bg-primary">
                                            <i class="fas fa-box me-1"></i>@user.ActivePackageCount Paket
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @user.CreatedDate.ToString("dd.MM.yyyy")
                                    </small>
                                </td>
                                <td>
                                    @if (user.LastLoginDate.HasValue)
                                    {
                                        <small class="text-muted">
                                            @user.LastLoginDate.Value.ToString("dd.MM.yyyy HH:mm")
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-primary"
                                           asp-page="/Users/Detail"
                                           asp-route-id="@user.UserId"
                                           data-bs-toggle="tooltip"
                                           title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-secondary"
                                           asp-page="/Users/Edit"
                                           asp-route-id="@user.UserId"
                                           data-bs-toggle="tooltip"
                                           title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post"
                                              asp-page-handler="ToggleStatus"
                                              asp-route-userId="@user.UserId"
                                              class="d-inline"
                                              onsubmit="return confirm('Kullanıcı durumunu değiştirmek istediğinize emin misiniz?');">
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-warning"
                                                    data-bs-toggle="tooltip"
                                                    title="@(user.IsActive ? "Pasifleştir" : "Aktifleştir")">
                                                <i class="fas fa-@(user.IsActive ? "ban" : "check")"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">Kullanıcı bulunamadı</p>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.StatusFilter))
                {
                    <a asp-page="/Users/Index" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-times me-1"></i>Filtreleri Temizle
                    </a>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}