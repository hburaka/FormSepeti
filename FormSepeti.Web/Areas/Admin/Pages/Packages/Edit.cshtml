@page "{id:int}"
@model FormSepeti.Web.Areas.Admin.Pages.Packages.EditModel
@{
    ViewData["Title"] = "Paket Düzenle";
}

<!-- Page Header -->
<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-2">
            <li class="breadcrumb-item">
                <a asp-page="/Dashboard/Index">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-page="/Packages/Index">Paketler</a>
            </li>
            <li class="breadcrumb-item active">@Model.Input.PackageName - Düzenle</li>
        </ol>
    </nav>
    <h2 class="mb-0">
        <i class="fas fa-edit text-primary me-2"></i>
        Paket Düzenle
    </h2>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="fas fa-box me-2"></i>
                    Paket Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Input.PackageId" />

                    <div class="mb-3">
                        <label asp-for="Input.GroupId" class="form-label">
                            <i class="fas fa-layer-group me-1"></i>Form Grubu <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Input.GroupId"
                                class="form-select"
                                asp-items="Model.Groups">
                            <option value="">-- Grup Seçin --</option>
                        </select>
                        <span asp-validation-for="Input.GroupId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.PackageName" class="form-label">
                            <i class="fas fa-heading me-1"></i>Paket Adı <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Input.PackageName"
                               class="form-control"
                               placeholder="Örn: Temel Paket" />
                        <span asp-validation-for="Input.PackageName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label">
                            <i class="fas fa-align-left me-1"></i>Paket Açıklaması
                        </label>
                        <textarea asp-for="Input.Description"
                                  class="form-control"
                                  rows="3"
                                  placeholder="Paketin içeriği ve özellikleri..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger small"></span>
                    </div>

                    <hr class="my-4" />

                    <h6 class="text-muted mb-3">
                        <i class="fas fa-dollar-sign me-1"></i>Fiyatlandırma
                    </h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Price" class="form-label">
                                Fiyat (TL) <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.Price"
                                   class="form-control"
                                   type="number"
                                   step="0.01"
                                   min="0.01"
                                   placeholder="0.00" />
                            <span asp-validation-for="Input.Price" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.DurationDays" class="form-label">
                                Süre (Gün)
                            </label>
                            <input asp-for="Input.DurationDays"
                                   class="form-control"
                                   type="number"
                                   min="0"
                                   placeholder="0 = Süresiz" />
                            <span asp-validation-for="Input.DurationDays" class="text-danger small"></span>
                            <small class="form-text text-muted">0 girerseniz paket süresiz olur</small>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Input.IsActive"
                                   class="form-check-input"
                                   type="checkbox"
                                   id="isActiveSwitch" />
                            <label class="form-check-label" for="isActiveSwitch">
                                <strong>Paket Aktif</strong>
                                <br />
                                <small class="text-muted">
                                    Kapalıysa paket kullanıcılara görünmez
                                </small>
                            </label>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-page="/Packages/Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Stats Card -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Paket İstatistikleri
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Toplam Satış:</span>
                    <strong>@Model.PurchaseCount</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Aktif Kullanıcı:</span>
                    <strong class="text-success">@Model.ActivePurchaseCount</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Paket ID:</span>
                    <strong>#@Model.Input.PackageId</strong>
                </div>
            </div>
        </div>

        <!-- Warning Card -->
        @if (Model.PurchaseCount > 0)
        {
            <div class="card border-warning mb-3">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Dikkat
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-0 small">
                        <strong>Bu paket @Model.PurchaseCount kullanıcı tarafından satın alınmış.</strong><br />
                        Fiyat değişikliği mevcut abonelikleri etkilemez, yeni satışlar için geçerli olur.
                    </p>
                </div>
            </div>
        }

        <!-- Help Card -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Bilgi
                </h6>
            </div>
            <div class="card-body">
                <h6 class="fw-bold mb-2">Paket Düzenleme</h6>
                <ul class="mb-0 ps-3 small">
                    <li class="mb-2">
                        Fiyat değişikliği sadece yeni satışları etkiler
                    </li>
                    <li class="mb-2">
                        Süre değişikliği mevcut aboneleri etkilemez
                    </li>
                    <li class="mb-0">
                        Pasif paketler satışa kapatılır
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Price change warning
        const priceInput = document.querySelector('input[name="Input.Price"]');
        const originalPrice = priceInput ? priceInput.value : '';

        document.querySelector('form').addEventListener('submit', function(e) {
            if (priceInput && priceInput.value !== originalPrice && @Model.PurchaseCount > 0) {
                if (!confirm('Fiyat değişikliği sadece yeni satışları etkiler. Devam etmek istiyor musunuz?')) {
                    e.preventDefault();
                }
            }
        });
    </script>
}