@page
@model FormSepeti.Web.Areas.Admin.Pages.Groups.IndexModel
@{
    ViewData["Title"] = "Grup Yönetimi";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-layer-group text-primary me-2"></i>
            Grup Yönetimi
        </h2>
        <p class="text-muted mb-0">Form gruplarını görüntüleyin ve yönetin</p>
    </div>
    <div>
        <a class="btn btn-primary" asp-page="/Groups/Create">
            <i class="fas fa-plus me-2"></i>Yeni Grup
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-lg bg-primary bg-opacity-10 text-primary rounded">
                            <i class="fas fa-layer-group fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Toplam Grup</h6>
                        <h3 class="mb-0">@Model.TotalGroups</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-lg bg-success bg-opacity-10 text-success rounded">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Aktif Grup</h6>
                        <h3 class="mb-0">@Model.ActiveGroups</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-lg bg-warning bg-opacity-10 text-warning rounded">
                            <i class="fas fa-times-circle fa-2x"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Pasif Grup</h6>
                        <h3 class="mb-0">@Model.InactiveGroups</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">
                        <i class="fas fa-search me-1"></i>Arama
                    </label>
                    <input type="text"
                           class="form-control"
                           name="searchTerm"
                           value="@Model.SearchTerm"
                           placeholder="Grup adı veya açıklama ile ara...">
                </div>
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="fas fa-filter me-1"></i>Durum
                    </label>
                    <select class="form-select" name="statusFilter">
                        <option value="all" selected="@(Model.StatusFilter == "all" || string.IsNullOrEmpty(Model.StatusFilter))">Tümü</option>
                        <option value="active" selected="@(Model.StatusFilter == "active")">Aktif</option>
                        <option value="inactive" selected="@(Model.StatusFilter == "inactive")">Pasif</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Ara
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Groups Table -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>
            Grup Listesi (@Model.Groups.Count)
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Groups.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Sıra</th>
                            <th>Grup Adı</th>
                            <th>Açıklama</th>
                            <th>İkon</th>
                            <th>Form Sayısı</th>
                            <th>Paket Sayısı</th>
                            <th>Durum</th>
                            <th>Oluşturma</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var group in Model.Groups)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-secondary">@group.SortOrder</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded me-2">
                                            <i class="fas fa-layer-group"></i>
                                        </div>
                                        <strong>@group.GroupName</strong>
                                    </div>
                                </td>
                                <td>
                                    <small class="text-muted">@group.Description</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(group.IconUrl) && group.IconUrl != "-")
                                    {
                                        <i class="@group.IconUrl fa-2x text-primary"></i>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (group.FormCount > 0)
                                    {
                                        <span class="badge bg-info">@group.FormCount Form</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (group.PackageCount > 0)
                                    {
                                        <span class="badge bg-success">@group.PackageCount Paket</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (group.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle me-1"></i>Pasif
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @group.CreatedDate.ToString("dd.MM.yyyy")
                                    </small>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-primary"
                                           asp-page="/Groups/Edit"
                                           asp-route-id="@group.GroupId"
                                           data-bs-toggle="tooltip"
                                           title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post"
                                              asp-page-handler="ToggleStatus"
                                              asp-route-groupId="@group.GroupId"
                                              class="d-inline">
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-warning"
                                                    data-bs-toggle="tooltip"
                                                    title="@(group.IsActive ? "Pasifleştir" : "Aktifleştir")">
                                                <i class="fas fa-@(group.IsActive ? "ban" : "check")"></i>
                                            </button>
                                        </form>
                                        <form method="post"
                                              asp-page-handler="Delete"
                                              asp-route-groupId="@group.GroupId"
                                              class="d-inline"
                                              onsubmit="return confirm('Bu grubu silmek istediğinize emin misiniz?');">
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="tooltip"
                                                    title="Sil"
                                                    @(group.FormCount > 0 || group.PackageCount > 0 ? "disabled" : "")>
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">Grup bulunamadı</p>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.StatusFilter))
                {
                    <a asp-page="/Groups/Index" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-times me-1"></i>Filtreleri Temizle
                    </a>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}